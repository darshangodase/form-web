{
  "settings": {
    "title": "Job Application",
    "description": "Apply for a position at our company. We're excited to learn more about you!",
    "submitButtonText": "Submit Application",
    "successMessage": "Thank you for your application! We'll review it and get back to you soon."
  },
  "fields": [
    {
      "id": "fullName",
      "type": "text",
      "label": "Full Name",
      "required": true,
      "placeholder": "Enter your full name"
    },
    {
      "id": "email",
      "type": "email",
      "label": "Email Address",
      "required": true,
      "placeholder": "Enter your email address"
    },
    {
      "id": "phone",
      "type": "phone",
      "label": "Phone Number",
      "required": true,
      "placeholder": "Enter your phone number"
    },
    {
      "id": "position",
      "type": "dropdown",
      "label": "Position Applied For",
      "required": true,
      "options": [
        "Software Engineer",
        "Product Manager",
        "UX Designer",
        "Marketing Specialist",
        "Sales Representative",
        "Customer Support",
        "Other"
      ]
    },
    {
      "id": "experience",
      "type": "dropdown",
      "label": "Years of Experience",
      "required": true,
      "options": [
        "Less than 1 year",
        "1-3 years",
        "3-5 years",
        "5-10 years",
        "10+ years"
      ]
    },
    {
      "id": "education",
      "type": "dropdown",
      "label": "Highest Education Level",
      "required": true,
      "options": [
        "High School",
        "Associate's Degree",
        "Bachelor's Degree",
        "Master's Degree",
        "Doctorate",
        "Other"
      ]
    },
    {
      "id": "skills",
      "type": "checkbox",
      "label": "Technical Skills",
      "required": true,
      "checkboxOptions": [
        "JavaScript",
        "Python",
        "Java",
        "React",
        "Node.js",
        "SQL",
        "AWS",
        "Docker",
        "Git",
        "Agile Methodologies"
      ]
    },
    {
      "id": "availability",
      "type": "dropdown",
      "label": "Earliest Start Date",
      "required": true,
      "options": [
        "Immediately",
        "Within 2 weeks",
        "Within 1 month",
        "Within 3 months",
        "Other"
      ]
    },
    {
      "id": "coverLetter",
      "type": "textarea",
      "label": "Cover Letter",
      "required": true,
      "placeholder": "Tell us about yourself and why you're interested in this position..."
    },
    {
      "id": "portfolio",
      "type": "text",
      "label": "Portfolio URL",
      "required": false,
      "placeholder": "Enter your portfolio or GitHub profile URL"
    }
  ]
} 